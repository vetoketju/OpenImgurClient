<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/space_l">

  <TextView
    android:id="@+id/dialog_edit_listfilter_title"
    style="@style/TextAppearance.ToolbarTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="List sort &amp; filtering"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/dialog_edit_listfilter_section_title"
    style="@style/TextAppearance.Title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_l"
    android:text="Section"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/dialog_edit_listfilter_title"/>

  <Spinner
    android:id="@+id/dialog_edit_listfilter_section_spinner"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_m"
    android:entries="@array/list_filter_section"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/dialog_edit_listfilter_section_title"/>

  <TextView
    android:id="@+id/dialog_edit_listfilter_window_title"
    style="@style/TextAppearance.Title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_l"
    android:text="Timeframe"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/dialog_edit_listfilter_section_spinner"/>

  <Spinner
    android:id="@+id/dialog_edit_listfilter_window_spinner"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_m"
    android:entries="@array/list_filter_window"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/dialog_edit_listfilter_window_title"/>

  <TextView
    android:id="@+id/dialog_edit_listfilter_sort_title"
    style="@style/TextAppearance.Title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_l"
    android:text="Sort by"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/dialog_edit_listfilter_window_spinner"/>

  <Spinner
    android:id="@+id/dialog_edit_listfilter_sort_spinner"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_m"
    android:entries="@array/list_filter_sort"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/dialog_edit_listfilter_sort_title"/>

  <Switch
    android:id="@+id/dialog_edit_listfilter_mature_switch"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Show NSFW"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/dialog_edit_listfilter_sort_spinner"
    app:thumbTextPadding="@dimen/space_l"/>

</androidx.constraintlayout.widget.ConstraintLayout>